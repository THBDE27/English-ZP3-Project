@model English_ZP3_Project.Models.Swimmer
@{
    ViewData["Title"] = Model.ID;
}

<link rel="stylesheet" href="~/css/bio.css" asp-append-version="true" />

<h1 class="title">@Model.Name</h1>

<div style="background-color:black; color:white; padding:12px;">
    <div id="texte">
        @for (int i = 0; i < Model.Information.Length; ++i)
        {
            var subtitle = (i < Model.Subtitles.Length) ? Model.Subtitles[i] : "";
            if (!string.IsNullOrWhiteSpace(subtitle))
            {
                <h4 style="margin:0 0 6px 0; color:lightblue;">@subtitle</h4>
            }
            <p style="margin:0 0 16px 0;">@Html.Raw(System.Net.WebUtility.HtmlEncode(Model.Information[i]).Replace("\n", "<br/>"))</p>
        }
    </div>
</div>