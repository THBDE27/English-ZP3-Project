@using English_ZP3_Project.Helpers
@using English_ZP3_Project.Models
@using System.Text.Encodings.Web
@using System.Text.Json
@using System.IO
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@{
    // Configure JSON serialization to safely escape quotes and newlines
    var options = new JsonSerializerOptions
    {
        Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping,
        WriteIndented = false
    };

    // Serialize the glossary to safe JSON
    var glossaryJson = JsonSerializer.Serialize(
        Word.GetGlossary().Select(w => new {
            text = w.Text,
            link = w.Link,
            definition = w.Definition
        }).ToList(),
        options
    );

    // Serialize the related words to safe JSON
    var relatedJson = JsonSerializer.Serialize(
        RelatedWord.GetRelatedWords().Select(r => new {
            variant = r.Text,
            orig = r.Original
        }).ToList(),
        options
    );
}

<!DOCTYPE html>
<html lang="en">
@inject FolderHelper FolderHelper
@inject FileHelper FileHelper
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - English_ZP3_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
