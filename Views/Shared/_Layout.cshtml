<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - English_ZP3_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/English_ZP3_Project.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">

</head>
<body>
    <header>


        <!-- PICTURE OVER NAVIGATION BAR -->
        <img src="~/images/pngtree-young-woman-swimmer-in-swimming-pool-photo-image_2817484.jpg" 
             alt="Banner" 
             class="top-banner">



        <!-- NAVIGATION BAR -->
        <nav class="font-cookie navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" 
             style="min-height: 100px;">

            <div class="container-fluid">


                <!-- HOME SCREEN WITH INTRO-->
                <a class="navbar-brand font-cookie" asp-area="" asp-controller="Home" asp-action="Index" 
                   style="font-size: 75px;">Swimming</a>




                <!-- DROPDOWN MENU ON SMALL SCREENS -->
                <button class="navbar-toggler" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target=".navbar-collapse" 
                        aria-controls="navbarSupportedContent"
                        aria-expanded="false" 
                        aria-label="Toggle navigation">

                    <span class="navbar-toggler-icon"></span>

                </button>




                <!-- LIST OF DROPDOWN ITEMS -->
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" 
                     id="navbarContent">

                    <ul class="navbar-nav flex-grow-1">





                        <!-- TECH -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" 
                               id="techDropdown" 
                               role="button" 
                               data-bs-toggle="dropdown" 
                               aria-expanded="false" >
                                Tech
                            </a>


                            <ul class="dropdown-menu" 
                                aria-labelledby="techDropdown">


                                <!-- TECHNOLOGY -->
                                <li>
                                    <a class="dropdown-item" asp-area=""
                                                             asp-controller="Tech" 
                                                             asp-action="Technology">
                                                             
                                         Technology
                                     </a>
                                     
                                 </li>

                                <!-- TECHNIQUES -->
                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Tech" 
                                                             asp-action="Techniques">
                                       Techniques
                                    </a>
                                </li>
                            </ul>
                        </li>




                        <!-- HEALTH -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" 
                               id="healthDropdown" 
                               role="button" 
                               data-bs-toggle="dropdown" 
                               aria-expanded="false" >
                                Health
                            </a>


                            <ul class="dropdown-menu" 
                                aria-labelledby="healthDropdown">

                                <!-- PHYSICAL EXAM -->
                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Health" 
                                                             asp-action="PhysicalExam">
                                                             
                                        Physical exam
                                    </a>
                                </li>

                                <!-- BENEFITS -->
                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Health" 
                                                             asp-action="Benefits">
                                        Benefits
                                    </a>
                                </li>

                                <!-- WORKOUT PLANS -->
                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Health" 
                                                             asp-action="WorkoutPlan">
                                      Workout plan
                                    </a>
                                </li>
                            </ul>
                        </li>





                        <!-- SOCIAL -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" 
                               id="socialDropdown" 
                               role="button" 
                               data-bs-toggle="dropdown" 
                               aria-expanded="false" >
                                Social
                            </a>
                            <ul class="dropdown-menu" 
                                aria-labelledby="socialDropdown">


                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Social" 
                                                             asp-action="Biographies">Biographies</a></li>


                                <li>
                                    <a class="dropdown-item" asp-area="" 
                                                             asp-controller="Social" 
                                                             asp-action="Events">Events</a></li>
                            </ul>
                        </li>

                       

                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            by Elie Thibodeau, Gabrielle Thibodeau, Naomie Kam-Thong & Victor Côté-Nicholson; F25 - English_ZP3_Project
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
