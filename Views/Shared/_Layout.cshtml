                                <li><a class="dropdown-item" asp-area="" asp-controller="HealthBenefits" asp-action="Benefits" style="font-size:20px">Health Benefits</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="PhysicalExam" style="font-size:20px">Muscles trained</a></li>
                            </ul>
                        </li>

                        <!-- Conclusion dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownConclusion" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">More</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownConclusion" style="font-size:20px; border: 2px solid #9388CF; border-radius: 10px;">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Conclusion" style="font-size:20px">Conclusion</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Glossary" style="font-size:20px">Glossary</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Ressources" style="font-size:20px">Sources</a></li>
