@using English_ZP3_Project.Helpers

<!DOCTYPE html>
<html lang="en">
@inject FolderHelper FolderHelper
@inject FileHelper FileHelper
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - English_ZP3_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/English_ZP3_Project.styles.css" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Cookie&display=swap" rel="stylesheet">
</head>
<body>
    <header>
        <!-- Banner image -->
        <img src="~/images/pngtree-young-woman-swimmer-in-swimming-pool-photo-image_2817484.jpg"
             alt="Banner" class="top-banner">

        <!-- Navbar -->
        <nav class="font-cookie navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3"
             style="min-height: 100px;">
            <div class="container-fluid">
                <a class="navbar-brand font-cookie text-white" asp-area="" asp-controller="Home" asp-action="Index"
                   style="text-decoration: none; line-height: 1; display: inline-block; text-align: center;">
                    <span style="display: block; font-size: 40px; margin-bottom: -15px;">The study of</span>
                    <span style="display: block; font-size: 75px;">Swimming</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarContent">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Technology dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownTechnology" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">Technology</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownTechnology">
                                @{
                                    List<string> folders = FolderHelper.GetSubFolderNames("files/technologies");
                                    foreach (string folder in folders)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Technology"
                                               asp-action="Technology" asp-route-id="@folder">
                                                @folder
                                            </a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>

                        <!-- Physics -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" asp-area="" asp-controller="Physics" asp-action="Techniques">Physics</a>
                        </li>

                        <!-- Biology dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownBiology" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">Biology</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownBiology">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="Biographies">Famous Anatomies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="HealthBenefits" asp-action="Benefits">Health Benefits</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="PhysicalExam">Muscles trained</a></li>
                            </ul>
                        </li>

                        <!-- Conclusion dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownConclusion" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">Conclusion</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownConclusion">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Conclusion">Impact</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="Benefits">Beating Records</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Glossary">Glossary</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3" id="texte">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <br /> by Elie Thibodeau, Gabrielle Thibodeau, Naomie Kam-Thong & Victor Côté-Nicholson; F25 - English_ZP3_Project
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>


@using English_ZP3_Project.Models
<script>
    window.glossary = @Html.Raw(
        System.Text.Json.JsonSerializer.Serialize(
            Word.GetGlossary().Select(w => new {
                text = w.Text,
                plural = w.Plural,
                link = w.Link,
                definition = w.Definition
            })
        )
    );
</script>

<script src="~/js/glossary.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
