@using English_ZP3_Project.Helpers
@using English_ZP3_Project.Models
@using System.Text.Encodings.Web
@using System.Text.Json
@using System.IO
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment Env

@{
    var options = new JsonSerializerOptions
    {
        Encoder = JavaScriptEncoder.UnsafeRelaxedJsonEscaping,
        WriteIndented = false
    };

    var glossaryJson = JsonSerializer.Serialize(
        Word.GetGlossary().Select(w => new { text = w.Text, link = w.Link, definition = w.Definition }).ToList(),
        options
    );

    var relatedJson = JsonSerializer.Serialize(
        RelatedWord.GetRelatedWords().Select(r => new { variant = r.Text, orig = r.Original }).ToList(),
        options
    );
}

<!DOCTYPE html>
<html lang="en">
@inject FolderHelper FolderHelper
@inject FileHelper FileHelper
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - English_ZP3_Project</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <!-- Banner image -->
        <img src="~/images/navbarPic.png"
             alt="Banner" class="top-banner">

        <!-- Navbar -->
        <nav class="font-cookie navbar navbar-expand-sm navbar-toggleable-sm navbar-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-white text-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="navbar-subtitle">The study of</span>
                    <span class="navbar-title">Swimming</span>
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarContent">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Technology dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownTechnology" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">Technology</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownTechnology">
                                @{
                                    List<string> folders = FolderHelper.GetSubFolderNames("files/technologies");
                                    foreach (string folder in folders)
                                    {
                                        <li>
                                            <a class="dropdown-item" asp-area="" asp-controller="Technology"
                                               asp-action="Technology" asp-route-id="@folder">@folder</a>
                                        </li>
                                    }
                                }
                            </ul>
                        </li>

                        <!-- Physics -->
                        <li>
                            <a class="nav-link dropdown-toggle text-white" asp-area="" asp-controller="Physics" asp-action="Techniques">Physics</a>
                        </li>

                        <!-- Biology dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownBiology" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">Biology</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownBiology">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="Biographies">Famous Anatomies</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="HealthBenefits" asp-action="Benefits">Health Benefits</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Biology" asp-action="PhysicalExam">Muscles trained</a></li>
                            </ul>
                        </li>

                        <!-- More dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" id="dropdownConclusion" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">More</a>
                            <ul class="dropdown-menu" aria-labelledby="dropdownConclusion">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Conclusion">Conclusion</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Glossary">Glossary</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Conclusion" asp-action="Sources">Sources</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <br /> by Elie Thibodeau - Sciences, Informatique et Mathématiques;
            <br />    Gabrielle Thibodeau - Sciences de la nature;
            <br />    Naomie Kam-Thong - Sciences, Informatique et Mathématiques;
            <br />    Victor Côté-Nicholson - Technique de l'informatique
            <br />
            <br />Fall 2025 - English ZP3 Project : "The Study of Swimming"
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        window.glossary = @Html.Raw(glossaryJson);
        window.related = @Html.Raw(relatedJson);
    </script>

    <script src="https://cdn.jsdelivr.net/npm/mark.js/dist/mark.min.js"></script>
    <script src="~/js/glossary.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
